@model List<CartItemDto>

<div class="col-lg-8 table-responsive mb-5">
    <table class="table table-light table-borderless table-hover text-center mb-0">
        <thead class="thead-dark">
            <tr>
                <th>Product Images</th>
                <th>Products</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Remove</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center py-5">
                        <div class="d-flex flex-column align-items-center justify-content-center">
                            <i class="fa fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Your cart is empty 😢</h5>
                            <a href="/ProductList" class="btn btn-primary mt-3">
                                Continue Shopping
                            </a>
                        </div>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.ProductImageUrl" class="img-fluid" style="max-width:100px; max-height:80px;" />
                        </td>
                        <td class="align-middle">
                            <img src="#" alt="" style="width: 50px;"> @item.ProductName
                        </td>
                        <td class="align-middle">@item.Price.ToString("C")</td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-minus">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="@item.Quantity">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-plus">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle">@item.Price.ToString("C")</td>
                        <td class="align-middle">
                            <a href="/Cart/RemoveFromCart/@item.ProductId" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
