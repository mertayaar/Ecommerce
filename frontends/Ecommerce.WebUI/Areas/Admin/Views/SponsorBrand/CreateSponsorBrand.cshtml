@model CreateSponsorBrandDto
@{
    ViewData["Title"] = "CreateSponsorBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Add New Sponsor Brand</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Sponsor Brand Name</label>
                        <input type="text" class="form-control" asp-for="BrandName" />
                        <br />
                        <label>Image</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn btn-primary">Add Sponsor Brand</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

