@model List<ResultReviewDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="card-body p-0">
                    <table class="table table-hover table-striped align-middle mb-0 ">
                        <thead class="table-light">
                            <tr>
                                <th>User</th>
                                <th>Review</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th style="width: 240px;">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NameSurname</td>
                                    <td>@item.ReviewDetail</td>
                                    <td>@item.CreatedDate.ToShortDateString()</td>
                                    <td>@item.status</td>
                                    <td>
                                        <a href="/Admin/Review/UpdateReview/@item.UserReviewId" class="btn btn-warning me-2"><i class="fa fa-pencil"></i> Update</a>
                                        <a href="/Admin/Review/DeleteReview/@item.UserReviewId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this review?');"><i class="fa fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

