@model GetCargoCustomerByIdDto

@{
    ViewData["Title"] = "User Address Information";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    .profile-card {
        max-width: 700px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 15px;
        background: #ffffff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', sans-serif;
    }

    .profile-header {
        background: linear-gradient(90deg, #00c6ff, #0072ff);
        color: white;
        padding: 20px;
        border-radius: 15px 15px 0 0;
        text-align: center;
        font-size: 1.5rem;
        font-weight: 600;
        margin: -30px -30px 30px -30px;
    }

    .profile-info {
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

        .profile-info i {
            color: #0072ff;
            margin-right: 10px;
            font-size: 1.2rem;
            min-width: 24px;
            text-align: center;
        }

    .profile-label {
        font-weight: 600;
        margin-right: 10px;
        color: #555;
        min-width: 150px;
    }

    .profile-value {
        color: #333;
    }

    .divider {
        border-top: 1px solid #eee;
        margin: 15px 0;
    }
</style>

<section class="content container-fluid">
    <div class="profile-card">
        <div class="profile-header">
            <i class="fa fa-user-circle me-2"></i> User Profile Information
        </div>

        <div class="profile-info">
            <i class="fa fa-id-card"></i>
            <span class="profile-label">User ID:</span>
            <span class="profile-value">@Model.CargoCustomerId</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-user"></i>
            <span class="profile-label">Full Name:</span>
            <span class="profile-value">@Model.Name @Model.Surname</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-envelope"></i>
            <span class="profile-label">Email:</span>
            <span class="profile-value">@Model.Email</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-phone"></i>
            <span class="profile-label">Phone:</span>
            <span class="profile-value">@Model.Phone</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-map-marker-alt"></i>
            <span class="profile-label">District / City:</span>
            <span class="profile-value">@Model.District / @Model.City</span>
        </div>

        <div class="profile-info">
            <i class="fa fa-home"></i>
            <span class="profile-label">Address:</span>
            <span class="profile-value">@Model.Address</span>
        </div>
    </div>
</section>
