@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "OrderHistoryList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
    var rowClasses = new List<string>
    {
        "table-primary",
        "table-success",
        "table-warning",
        "table-danger",
        "table-info"
    };
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Order History</h4>
                        @* <p class="card-description">
                            Add class <code>.table</code>
                        </p> *@
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Total Price</th>
                                        <th>Order Date</th>
                                        <th>Order Details</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        var rowClass = rowClasses[count % rowClasses.Count];
                                        count++;

                                        <tr class="@rowClass">
                                            <th>@count</th>
                                            <td>@item.TotalPrice</td>
                                            @* <td>@item.OrderDate.ToShortDateString()</td> *@
                                            <td>@(((DateTime)item.OrderDate).ToString("MMM-dd"))</td>
                                            <td> <a href="#" class="btn btn-outline-dark me-2"><i class="fa fa-info-circle"></i>Details</a></td>
                                            <td><label class="badge badge-danger">Pending</label></td>
                                        </tr>
                                    }
                                   
                             
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

