@model List<ResultInboxMessageDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Inbox</h4>
                        @* <p class="card-description">
                            Add class <code>.table</code>
                        </p> *@
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Sender</th>
                                        <th>Subject</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Delete</th>
                                        <th>See More</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                       
                                        count++;

                                        <tr>
                                            <th>@count</th>
                                            <td>Admin</td>
                                            <td>@item.Subject</td>
                                            <td>@(((DateTime)item.MessageDate).ToString("MMM-dd"))</td>
                                            <td>
                                                <label class="badge @(item.IsRead ? "badge-success" : "badge-danger")">
                                                    @(item.IsRead ? "Seen" : "Not Seen")
                                                </label>
                                            </td>
                                            <td> <a href="#" class="btn btn-outline-danger me-2"><i class="fa fa-info-circle"></i>Delete</a></td>
                                            <td> <a href="#" class="btn btn-outline-info me-2"><i class="fa fa-info-circle"></i>See More</a></td>
                                          
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


